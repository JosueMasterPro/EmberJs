<main>
  <h1>Facturacion</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <LinkTo @route="index">
        Home
      </LinkTo>
    </li>
    <li class="breadcrumb-item">
      <LinkTo @route="cart">
        Shopping Cart
      </LinkTo>
    </li>
    <li class="breadcrumb-item">Metodo de Pago</li>
  </ol>
  <div class="card-group">
    <div class="card border-0">
      <div class="card-body">
          <h4 class="card-title">Metodo De Pago</h4>
          <div class="card-body">
              <div class="Select-Method">
                  <ul class="list-group">
                      <li class="list-group-item mouse active" id="tarjeta"{{on "click" this.Metodo1}}><h3><i class="fa fa-circle" style="font-size: 20px;" aria-hidden="true"></i> Tarjeta de Credito</h3></li>
                        <div class="tab-content bg-light border-left border-bottom border-right" id="Contenido-tarjeta">
                          <div class="tab-pane fade show active" id="tarjeta-pago" role="tabpanel" aria-labelledby="tarjeta">
                            <h4 class="list-group-item-heading">Tarjeta</h4>
                            <div class="list-group-item-text">...</div>
                          </div>
                        </div>
                      <li class="list-group-item mouse" id="paypal" {{on "click" this.Metodo2}}><h3><i class="fa fa-circle" style="font-size: 20px; " aria-hidden="true"></i> Paypal</h3></li>
                        <div class="tab-content bg-light border-left border-bottom border-right" id="Contenido-paypal">
                          <div class="tab-pane fade" id="paypal-pago" role="tabpanel" aria-labelledby="paypal">
                            <h4 class="list-group-item-heading">Paypal</h4>
                            <div class="list-group-item-text">...</div>
                          </div>
                        </div>
                  </ul>
                </div>
            </div>
        </div>
      </div>
    <div class="card border-0">
      <div class="card-body">
        <h4 class="card-title">Total A Pagar</h4>
        <div class="card-text">
            <section class="w-50 ml-auto text-right mb-5">
              <div class="row">
                <span class="col">Subtotal</span>
              <span class="col">{{currency this.subtotal}}</span>
              </div>
              <div class="row">
                <span class="col">Impuesto</span>
                <span class="col">{{currency this.tax}}</span>
              </div>
              <div class="row">
                <span class="col">Total</span>
                <span class="col">{{currency this.total}}</span>
              </div>
            </section>
        </div>
      </div>
    </div>
  </div>


</main>